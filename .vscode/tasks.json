{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "clear-all-daprd-processes",
        "type": "shell",
        "isBackground": true,
        "windows":{
          "command": "Get-Process -Name 'daprd' | Stop-Process"
        },
        "linux":{
          "command": "kill -9 $(ps aux | grep daprd | awk '{print $2}')"
        },
        "osx":{
          "command": "ps aux | grep daprd|grep -v grep | awk '{print $2}'|xargs kill -9"
        },
        // "command": [
        //    "kill -9 $(ps aux | grep daprd | awk '{print $2}')"
        // ],
      },
      {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",
          "run",
          "--project",
          "${workspaceFolder}/task_workers/data_processor/data_processor.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
        "dependsOn":"daprd-debug-data-processor"
      },
      {
        "label": "daprd-debug-api-service",
        "type": "daprd",
        "appId": "api-service",
        "appPort": 8780,
        "httpPort": 3500,
        "metricsPort": 9090,
        "grpcPort": 53320,
      },
      {
        "label": "daprd-down-api-service",
        "type": "daprd-down",
        "appId": "api-service"
      },
  
      {
        "label": "daprd-debug-jkf-worker",
        "type": "daprd",
        "appId": "jkf-worker",
        "appPort": 8789,
        "httpPort": 3501,
        "metricsPort": 9091,
        "grpcPort": 53317,
      },
      {
        "label": "daprd-down-jkf-worker",
        "type": "daprd-down",
        "appId": "jkf-worker"
      },
  
      {
        "label": "daprd-debug-data-processor",
        "type": "daprd",
        "appId": "data-processor",
        "appPort": 5235,
        "httpPort": 3506,
        "metricsPort": 9095,
        "grpcPort": 53319,
      },
      {
        "label": "daprd-down-data-processor",
        "type": "daprd-down",
        "appId": "data-processor"
      },
    ]
  }