{
    // 使用 IntelliSense 以得知可用的屬性。
    // 暫留以檢視現有屬性的描述。
    // 如需詳細資訊，請瀏覽: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "api-service",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/api/main.py",
            "preLaunchTask": "daprd-debug-api-service",
            "postDebugTask": "daprd-down-api-service",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "jkf-worker",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/task_workers/jkf_worker/main.py",
            "preLaunchTask": "daprd-debug-jkf-worker",
            "postDebugTask": "daprd-down-jkf-worker",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "mdk-worker",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/task_workers/mdk_worker/main.py",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "daprd-debug-mdk-worker",
            "postDebugTask": "daprd-down-mdk-worker",

        },
        {
            "name": "data-processor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "watch",
            "postDebugTask": "daprd-down-data-processor",
            "program": "${workspaceFolder}/task_workers/data_processor/bin/Debug/net6.0/data_processor.dll",
            "args": [],
            "cwd": "${workspaceFolder}/task_workers/data_processor",
            "stopAtEntry": true,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "mdk-worker with Dapr",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/task_workers/mdk_worker/main.py",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "daprd-debug",
            "postDebugTask": "daprd-down"
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "preLaunchTask": "clear-all-daprd-processes",
            "configurations": [
                "api-service","jkf-worker","data-processor","mdk-worker"
            ]
        }
    ]
}