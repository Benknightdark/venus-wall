    "version": "0.2.0",
    "configurations": [
        {
            "name": "api-service",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/api/main.py",
            "preLaunchTask": "daprd-debug-api-service",
            "postDebugTask": "daprd-down-api-service",
        },
        {
            "name": "jkf-worker",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "jinja": true,
            "program": "${workspaceFolder}/task_workers/jkf_worker/main.py",
            "preLaunchTask": "daprd-debug-jkf-worker",
            "postDebugTask": "daprd-down-jkf-worker",
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "preLaunchTask": "clear-all-daprd-processes",
            "configurations": [
                "api-service","jkf-worker"
            ]
        }
    ]
}